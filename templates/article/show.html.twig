{% extends 'base.html.twig' %}

{% block title %}Détails article{% endblock %}

{% block myTitle %}Détails de l'article{% endblock %}


{% block body %}
<div class="container">



    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <!-- <th>Created_at</th>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td> -->
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ article.text }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ article.image }}</td>
            </tr>
            <tr>
                <th>Visuel</th>
                <td><div class="image_visu"><img src="{{asset('images/' ~ article.image)}}" alt=""  style="height: 200px; width: 200px;"></div></td>
            </tr>
            <tr>
                <!-- <th>Updated_at</th>
                <td>{{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' }}</td> -->
            </tr>
        </tbody>
    </table>

    <button class="btn btn-info"><a href="{{ path('articles_admin') }}">Retour à la liste</a></button>
    <br>
    <button class="btn btn-success"><a href="{{ path('article_edit', {'id': article.id}) }}">Editer</a></button>

    {{ include('article/_delete_form.html.twig') }}
</div>
{% endblock %}
