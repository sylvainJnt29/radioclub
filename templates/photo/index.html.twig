{% extends 'base.html.twig' %}

{% block title %}Administration des photos{% endblock %}

{% block myTitle %}Les photos{% endblock %}


{% block body %}
<div class="container">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{message}}
            </div>
        {% endfor %}


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Visuel</th>
                <!-- <th>Updated_at</th> -->
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for photo in photos %}
            <tr>
                <td>{{ photo.id }}</td>
                <td>{{ photo.image }}</td>
                <td><div class="image_visu"><img src="{{asset('images/' ~ photo.image)}}" alt="" style="width: 200px;"></div></td>
                <!-- <td>{{ photo.updatedAt ? photo.updatedAt|date('Y-m-d H:i:s') : '' }}</td> -->
                <td>
                    <button class="btn btn-secondary"><a href="{{ path('photo_show', {'id': photo.id}) }}">Détails</a></button><br>
                    <button class="btn btn-info"><a href="{{ path('photo_edit', {'id': photo.id}) }}">Editer</a></button><br>
                    <button class="btn btn-success"><a href="{{ path('photo_new') }}">Créer</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Il n'y a pas de photos dans la base de données!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


</div>
{% endblock %}
